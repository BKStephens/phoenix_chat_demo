<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= label f, :conversation_participants, "Recipients", class: "control-label", style: "display: block;" %>
  <%= multiple_select(f, :conversation_participants, name_id_map(@users)) %>

  <div class="form-group">
    <%= label f, :message, "Message", class: "control-label" %>
    <%= text_input f, :message, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
