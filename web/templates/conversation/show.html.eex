<h2>Show conversation</h2>

<ul>

  <li>
    <strong>Message:</strong>
    <%= @conversation.message %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @conversation.user_id %>
  </li>

  <strong>Recipients:</strong>
  <%= for cp <- @conversation.conversation_participants do %>
  <li>
    <%= cp.user.email  %>
  </li>
  <%= end %>
</ul>

<%= link "Back", to: conversation_path(@conn, :index) %>
